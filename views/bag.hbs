<div id="bag">
    {{#if quantity}}
    <h1>Bag</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        {{#each bag}}
        <tr class="product-list">
            <td>{{title}}</td>
            <td>{{quantity}}</td>
            <td>{{price}}</td>
            <td><button type="button" class="btn btn-primary js-remove" data-id={{id}}>delete</button></td>
        </tr>
        {{/each}}
    </table>
    <h2>Total: {{quantity}}</h2>
    <h3>Price: <span class="price">{{price}}</span></h3>

    <form action="/orders" method='POST'>
        <button type="submit" class="btn btn-primary">Order Now</button>
        <input type="hidden" name="_csrf" value={{csrf}}>

    </form>
    {{else}}
    <h1>Bag is empty</h1>
    {{/if}}
</div>