<h1>My Orders</h1>


{{#if renderOrders.length}}
{{#each renderOrders}}
<div class="row">
    <div class="col s6 offsets-s3">
        <div class="card">
            <div class="card-content">
                <span class="card-title">
                    <small> Order: {{id}}</small></span>
                <p class="date">{{date}}</p>
                <ol>
                    {{#each products}}
                    <li>
                        Name: {{title}} x <strong>{{quantity}}</strong>
                    </li>
                    {{/each}}
                </ol>
                <hr>
                <p>Total: <span class="price">{{total}}</span></p>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<h2>No orders</h2>
{{/if}}