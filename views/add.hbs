<div class="row">
    {{#if error}}
    <p class="alert">{{error}}</p>
    {{/if}}

    <form action='/add' method="POST" class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <input name="title" id="course" type="text" required=true class="validate" value={{data.title}}>
                <label for="course">Course</label>

            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input name="price" id="price" type="text" required=true class="validate" value={{data.price}}>
                <label for="price">Price</label>
                <span class="helper-text" data-error="* required"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input name="img" id="img" type="text" required=true class="validate" value={{data.img}}>
                <label for="img">Image</label>
            </div>
        </div>
        <input type="hidden" name="_csrf" value={{csrf}}>
        <button type="submit" class="btn btn-primary">Add course</button>

    </form>
</div>